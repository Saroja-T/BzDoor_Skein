    
<!-- activity_base.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@+id/userProfileView"
        layout="@layout/activity_user_profileview"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <fragment
        android:id="@+id/main_fragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:name="androidx.navigation.fragment.NavHostFragment"
        app:defaultNavHost="true"
        app:navGraph='@navigation/nav_graph'
        app:layout_constraintTop_toBottomOf="@+id/userProfileView"
        app:layout_constraintBottom_toTopOf="@+id/llBottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/llBottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/main_fragment"
        app:layout_constraintBottom_toBottomOf="parent">
        <me.ibrahimsn.lib.SmoothBottomBar
            android:padding="@dimen/_5sdp"
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:backgroundColor="@android:color/transparent"
            android:background="@drawable/rounded_app_color"
            app:menu="@menu/menu_bottom"
            app:sideMargins="@dimen/_1sdp"
            app:itemPadding="@dimen/_5sdp"
            app:duration="@integer/material_motion_duration_short_1"
            app:indicatorRadius="@dimen/_4sdp"
            app:textSize="@dimen/_8sdp"
            app:iconSize="@dimen/_20sdp"
            android:visibility="gone"
            />

        <me.ibrahimsn.lib.SmoothBottomBar
            android:padding="@dimen/_5sdp"
            android:id="@+id/bottomBarStaff"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:backgroundColor="@android:color/transparent"
            android:background="@drawable/rounded_app_color"
            app:menu="@menu/menu_bottom_staff"
            app:sideMargins="@dimen/_1sdp"
            app:itemPadding="@dimen/_5sdp"
            app:duration="@integer/material_motion_duration_short_1"
            app:indicatorRadius="@dimen/_4sdp"
            app:textSize="@dimen/_8sdp"
            app:iconSize="@dimen/_20sdp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
