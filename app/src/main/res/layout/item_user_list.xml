<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5sdp"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_1sdp"
    android:elevation="@dimen/_10sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_5sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_weight="1"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.busydoor.app.customMethods.MyCustomTextView
                    android:id="@+id/tv_offer_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    tools:text="text one" />
                <com.busydoor.app.customMethods.MyCustomTextView
                    android:id="@+id/tv_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    tools:text="Activate" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.busydoor.app.customMethods.RoundRectCornerImageView
                    android:id="@+id/icon_img"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_margin="@dimen/_10sdp"
                    app:civ_border_width="1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:gravity="center"
                    android:layout_weight="1">

                    <com.busydoor.app.customMethods.MyCustomTextView
                        android:id="@+id/tv_offer_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal"
                        tools:text="text one"
                        android:layout_gravity="center"
                        android:textColor="#A3A2A2"/>
                    <com.busydoor.app.customMethods.MyCustomTextView
                        android:id="@+id/tv_offer_city1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="normal"
                        tools:text="text one"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:textColor="#A3A2A2"
                        android:visibility="gone"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:paddingEnd="@dimen/_5sdp">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/sw_status"
                        android:layout_width="wrap_content"
                        android:gravity="right"
                        android:layout_height="@dimen/_18sdp"
                        android:src="@drawable/down_arrow"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal"
                        android:layout_gravity="right"
                        android:layout_weight="2"
                        android:textOff="inactive"
                        android:textOn="active"
                        android:visibility="visible"
                        android:thumb="@drawable/custom_switch"
                        app:track="@drawable/track_selector"
                        />
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/sw_status_disbled"
                        android:layout_width="wrap_content"
                        android:gravity="right"
                        android:layout_height="@dimen/_22sdp"
                        android:src="@drawable/down_arrow"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal"
                        android:layout_gravity="right"
                        android:layout_weight="2"
                        android:textOff="inactive"
                        android:textOn="active"
                        android:visibility="gone"
                        android:thumb="@drawable/custom_switch_disable"
                        app:track="@drawable/track_selector_disabled"
                        />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
