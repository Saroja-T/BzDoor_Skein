<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_80sdp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp">

            <!-- Image with Border -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cIvImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:padding="@dimen/_3sdp"
                android:visibility="visible"
                app:civ_border_color="#A39E9F80"
                app:civ_border_width="4dp"
                android:src="@drawable/dummy_premise_img"/>
            <!-- Camera Icon -->
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.busydoor.app.customMethods.MyCustomTextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold|normal"
            android:textColor="#747171"
            android:layout_weight="1"
            android:text="Your now CHECKED-OUT from
Complex 1 "
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"/>

        <com.busydoor.app.customMethods.MyCustomTextView
            android:id="@+id/tvTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_weight="2"
            android:text="1:30 pm"
            android:textColor="#747171"
            android:textFontWeight="400"
            android:textSize="@dimen/_10sdp"
            app:fontFamily="     " />

    </LinearLayout>
</androidx.cardview.widget.CardView>