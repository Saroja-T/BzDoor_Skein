<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_5sdp"
    tools:context=".fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">
            <!--    Your content goes here    -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/userProfileView"
                    layout="@layout/activity_user_profileview"
                    android:visibility="visible" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/calendarIcon"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/offsiteHeading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="Fri -13th Oct,2023" />
                        <ImageView
                            android:padding="@dimen/_1sdp"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_calendartoday" />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:elevation="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_shapes_with_white_color"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/spinnerView"
                                android:elevation="@dimen/_5sdp"
                                android:layout_width="55dp"
                                android:gravity="left"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:text="Oct" />
                            <ImageView
                                android:padding="@dimen/_1sdp"
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="match_parent"
                                android:src="@drawable/down_arrow" />
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/actionDownIcon"
                            android:padding="@dimen/_1sdp"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_download" />


                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/ll_graphical_online"
                    android:layout_width="@dimen/_330sdp"
                    android:layout_height="@dimen/_400sdp"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_35sdp"
                    android:gravity="top|center"
                    android:layout_gravity="top|center"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:background="@drawable/home_list_back"
                        android:orientation="vertical"
                        android:padding="@dimen/_8sdp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:orientation="vertical"
                            android:padding="@dimen/_2sdp">

                            <com.github.mikephil.charting.charts.BarChart
                                android:id="@+id/chart"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_220sdp"
                                android:layout_above="@+id/seekBar1" />

                            <LinearLayout
                                android:layout_marginTop="@dimen/_5sdp"
                                android:id="@+id/chart_time_details_indicator"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:visibility="visible">
                                <LinearLayout
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center"
                                    android:gravity="center">
                                    <TextView
                                        android:layout_width="@dimen/_10sdp"
                                        android:layout_height="@dimen/_10sdp"
                                        android:background="@drawable/icon_online_circle">
                                    </TextView>
                                    <TextView
                                        android:id="@+id/tvOnlineAtTime"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:layout_marginLeft="@dimen/_2sdp"
                                        android:layout_gravity="left"
                                        android:gravity="left"
                                        android:text="Online"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center"
                                    android:gravity="center">
                                    <TextView
                                        android:layout_width="@dimen/_10sdp"
                                        android:layout_height="@dimen/_10sdp"
                                        android:background="@drawable/icon_offsite_circle">>

                                    </TextView>
                                    <TextView
                                        android:id="@+id/tvOffileAtTime"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:layout_marginLeft="@dimen/_2sdp"
                                        android:layout_gravity="left"
                                        android:gravity="left"
                                        android:text="Offsite"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center"
                                    android:gravity="center">
                                    <TextView
                                        android:layout_width="@dimen/_10sdp"
                                        android:layout_height="@dimen/_10sdp"
                                        android:background="@drawable/icon_offline_circle">
                                    </TextView>
                                    <TextView
                                        android:id="@+id/tvClosedAtTime"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:layout_marginLeft="@dimen/_2sdp"
                                        android:layout_gravity="left"
                                        android:gravity="left"
                                        android:text="Offline"/>
                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/chart_time_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:backgroundTint="#ECEDFA"
                            android:background="@drawable/home_list_back"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_5sdp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:text="Online">
                                </TextView>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_5sdp"
                                    android:textStyle="normal"
                                    android:maxLines="12"
                                    android:text="10:20 am -11:00 addddddddddddddddddddddddddddddddddddddddddddddd"
                                    android:textColor="@color/text_color">

                                </TextView>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <!--  Bottom nav goes here  -->
    </LinearLayout>

</FrameLayout>