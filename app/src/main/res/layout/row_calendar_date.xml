<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="48dp"
    android:layout_height="60dp">

    <LinearLayout
        android:id="@+id/card_calendar"
        android:background="@drawable/unselected_border"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_calendar_day"
                android:layout_width="wrap_content"
                android:textColor="#A8A4A4"
                android:textStyle="bold"
                android:textSize="@dimen/_8sdp"
                android:padding="@dimen/_1sdp"
                android:text="Sun"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_calendar_date"
                android:textColor="#918E8E"
                android:text="12"
                android:padding="@dimen/_1sdp"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/roundedDot"
                android:layout_width="10px"
                android:layout_height="10px"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:background="@drawable/rounded_dot_background" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>