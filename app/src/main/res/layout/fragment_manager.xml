<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">
            <!--    Your content goes here    -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/calendarIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/offsiteDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fri -13th Oct,2023"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/_13sdp" />

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_1sdp"
                        android:src="@drawable/icon_calendartoday" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_graphical_online"
                    android:layout_width="@dimen/_330sdp"
                    android:layout_height="@dimen/_300sdp"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="top|center"
                    android:layout_gravity="top|center"
                    android:visibility="visible">

                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="@dimen/_300sdp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/chart3">

                        <!--                        <RelativeLayout-->
                        <!--                            android:layout_width="match_parent"-->
                        <!--                            android:layout_height="match_parent"-->
                        <!--                            android:id="@+id/chart_relative"-->
                        <!--                            style="@style/pie_chart_rl">-->




                        <!--                        </RelativeLayout>-->
                        <RelativeLayout
                            android:layout_width="@dimen/_300sdp"
                            android:layout_height="@dimen/_250sdp"
                            android:layout_marginBottom="@dimen/_10sdp">

                            <com.app.adprogressbarlib.AdCircleProgress
                                android:id="@+id/pgb_staffs"
                                style="@style/pgb"
                                android:layout_width="295dp"
                                android:layout_height="297dp"
                                android:layout_centerInParent="true"
                                android:backgroundTintMode="add"
                                android:scaleType="centerCrop"
                                app:adpgb_background_color="@android:color/transparent"
                                app:adpgb_finished_color="@color/app_color"
                                app:adpgb_progress="0"
                                app:adpgb_unfinished_color="@color/unfinishedColor"
                                custom:adpgb_finished_stroke_width="@dimen/_15sdp"
                                custom:adpgb_show_text="false"
                                custom:adpgb_unfinished_stroke_width="@dimen/_15sdp" />

                            <TextView
                                android:id="@+id/staffCountView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="20dip"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="48sp" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/staffPresent"
                            android:textColor="#1D1D1D"
                            android:textSize="24sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_25sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <pl.droidsonroids.gif.GifImageView
                                android:id="@+id/imageView2"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:layout_weight="2"
                                android:paddingLeft="20dp"
                                app:civ_border_width="1.05dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:src="@drawable/premiselist_staff_satus_in" />

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="match_parent"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:letterSpacing="0.05"
                                android:text="Checked-In"
                                android:textColor="@color/app_color" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvCheckIn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center|center_vertical"
                            android:letterSpacing="0.05"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:layout_weight="2"
                                android:paddingLeft="20dp"
                                android:src="@drawable/icon_profile_status_out" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:letterSpacing="0.05"
                                android:text="Checked-Out"
                                android:textColor="@color/app_color" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvCheckOut"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center|center_vertical"
                            android:letterSpacing="0.05"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView10"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:layout_weight="2"
                                android:paddingLeft="20dp"
                                android:src="@drawable/icon_profile_status_offline" />

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="match_parent"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:letterSpacing="0.05"
                                android:text="Offline"
                                android:textColor="@color/app_color" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvOffline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center|center_vertical"
                            android:letterSpacing="0.05"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20sdp" />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
        <!--  Bottom nav goes here  -->
    </LinearLayout>

</FrameLayout>