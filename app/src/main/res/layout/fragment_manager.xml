<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">
            <!--    Your content goes here    -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/userProfileView"
                    layout="@layout/activity_user_profileview"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/calendarIcon"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/offsiteDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="Fri -13th Oct,2023" />
                    <ImageView
                        android:padding="@dimen/_1sdp"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_calendartoday" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_graphical_online"
                    android:layout_width="@dimen/_330sdp"
                    android:layout_height="@dimen/_300sdp"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="top|center"
                    android:layout_gravity="top|center"
                    android:visibility="visible">

                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="@dimen/_300sdp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/chart3">

<!--                        <RelativeLayout-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="match_parent"-->
<!--                            android:id="@+id/chart_relative"-->
<!--                            style="@style/pie_chart_rl">-->




<!--                        </RelativeLayout>-->
                        <RelativeLayout
                            android:layout_width="@dimen/_300sdp"
                            android:layout_height="@dimen/_250sdp"
                            android:layout_marginBottom="@dimen/_10sdp">

                            <com.app.adprogressbarlib.AdCircleProgress
                                android:id="@+id/pgb_staffs"
                                style="@style/pgb"
                                android:layout_centerInParent="true"
                                android:backgroundTintMode="add"
                                android:scaleType="centerCrop"
                                app:adpgb_background_color="@android:color/transparent"
                                app:adpgb_finished_color="@color/finishedColor"
                                app:adpgb_progress="0"
                                app:adpgb_unfinished_color="@color/unfinishedColor"
                                custom:adpgb_finished_stroke_width="@dimen/_15sdp"
                                custom:adpgb_show_text="false"
                                custom:adpgb_unfinished_stroke_width="@dimen/_15sdp" />

                            <TextView
                                android:id="@+id/staffCountView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="20dip"
                                android:text="25/50"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold" />

                        </RelativeLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="#1D1D1D"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold"
                            android:text="@string/staffPresent"/>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
        <!--  Bottom nav goes here  -->
    </LinearLayout>

</FrameLayout>