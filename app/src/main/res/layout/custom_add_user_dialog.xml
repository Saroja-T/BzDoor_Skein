<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/_10sdp"
    android:padding="@dimen/_5sdp"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    android:background="@drawable/home_list_back"
    android:showDividers="middle">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:text="Add premise to user"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/dialog_tittle_text"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="15sp"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:id="@+id/dialog_text"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/add_user_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp"
            android:visibility="visible">



            <LinearLayout
                android:id="@+id/cv_login_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:background="@drawable/textfield_shapes"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="28dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.busydoor.app.customMethods.MyCustomTextView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="match_parent"
                            android:gravity="start|center"
                            android:background="@drawable/iconphone"
                            android:padding="@dimen/_5sdp" />

                        <com.busydoor.app.customMethods.MyCustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start|center"
                            android:padding="@dimen/_2sdp"
                            android:text="+91"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold"/>

                        <com.busydoor.app.customMethods.MyCustomEdittext
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:digits="1234567890"
                            android:backgroundTint="@color/appBackground"
                            android:layout_marginStart="@dimen/_1sdp"
                            android:drawablePadding="@dimen/_5sdp"
                            android:hint="@string/enterMobile"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:gravity="center|left"
                            android:layout_gravity="center"
                            android:id="@+id/phoneNumber"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/black"
                            android:textColorHint="#CCCCCC"
                            android:textSize="@dimen/_10sdp"
                            android:maxLength="10" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp">

                <com.busydoor.app.customMethods.MyCustomEdittext
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:text="User Status (active/Inactive)"
                    android:textColor="#231F20"
                    android:textSize="@dimen/_12sdp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/sw_status"
                    android:layout_width="wrap_content"
                    android:gravity="right|center"
                    android:layout_height="@dimen/_22sdp"
                    android:src="@drawable/down_arrow"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="normal"
                    android:layout_gravity="right|center"
                    android:layout_weight="2"
                    android:textOff="inactive"
                    android:textOn="active"
                    android:visibility="visible"
                    android:checked="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:thumb="@drawable/custom_switch"
                    app:track="@drawable/track_selector"
                    />
            </LinearLayout>

            <com.busydoor.app.customMethods.MyCustomTextView
                android:id="@+id/errorMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="start"
                android:padding="@dimen/_5sdp"
                android:text=""
                android:textColor="#EA1405"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone"/>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_circular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_gravity="center"
            android:visibility="gone"/>

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/_1sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_20sdp"
        style="?android:buttonBarStyle">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:id="@+id/cancel_action"
            android:layout_weight="1"
            android:elevation="@dimen/_3sdp"
            android:text="NO, CANCEL"
            android:background="@drawable/button_shapes_with_white_color"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:layout_marginEnd="@dimen/_5sdp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:id="@+id/ok_action"
            android:layout_height="@dimen/_38sdp"
            android:layout_weight="1"
            android:elevation="@dimen/_3sdp"
            android:text="YES, ADD"
            android:background="@drawable/button_shapes_with_app_color"
            android:textColor="@color/white"
            android:textAllCaps="false"
            />
    </LinearLayout>

</LinearLayout>


