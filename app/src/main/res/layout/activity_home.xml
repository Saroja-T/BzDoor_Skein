<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center"
    android:background="#f00"
    android:orientation="vertical"
    android:weightSum="1"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="@dimen/_300sdp"
        android:id="@+id/chart3"
        style="@style/clock_view_ll"
        android:background="@drawable/pie_chart_bg_box">

        <RelativeLayout
            android:id="@+id/chart_relative"
            style="@style/pie_chart_rl">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chart1"
                android:layout_width="@dimen/_310sdp"
                android:layout_height="@dimen/_350sdp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="@dimen/_300sdp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp">

            <LinearLayout
                android:id="@+id/checkInDetails"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_margin="@dimen/_5sdp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/_8sdp"
                        android:layout_height="@dimen/_8sdp"
                        android:layout_gravity="right|center"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:background="@drawable/icon_checkouttime"
                        android:letterSpacing="0.1"></TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:letterSpacing="0.05"
                        android:maxLength="24"
                        android:text="Check in"
                        android:textColor="@color/app_color"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_18sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_gravity="right|center"
                        android:letterSpacing="0.1"
                        android:visibility="gone"></TextView>

                    <TextView
                        android:id="@+id/checkInTime"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:letterSpacing="0.08"
                        android:maxLength="24"
                        android:text="09:35 am"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="normal" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_2sdp"
                android:background="@drawable/line_bg">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/checkOutDetails"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/_8sdp"
                        android:layout_height="@dimen/_8sdp"
                        android:layout_gravity="right|center"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:background="@drawable/icon_check_intime"
                        android:letterSpacing="0.1"></TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:letterSpacing="0.05"
                        android:maxLength="24"
                        android:text="Check out"
                        android:textColor="@color/app_color"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/checkOutTime"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_18sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_gravity="right|center"
                        android:letterSpacing="0.1"
                        android:visibility="gone"></TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:letterSpacing="0.08"
                        android:maxLength="24"
                        android:text="12:05 pm"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_margin="25sp"
        android:layout_weight="0.5"
        android:background="#0000ff"
        android:gravity="center" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/lock_outline">

        </ImageView>
    </LinearLayout>
</RelativeLayout>