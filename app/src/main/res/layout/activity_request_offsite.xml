<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_5sdp"
    tools:context=".activity.RequestOffsiteActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include
                android:id="@+id/requestOffciteTool"
                layout="@layout/request_offisite_toolbar">
            </include>

            <LinearLayout
                android:id="@+id/calendarIcon"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/offsiteDateHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fri -13th Oct,2023"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
                <ImageView
                    android:padding="@dimen/_1sdp"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_calendartoday" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginTop="@dimen/_13sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioButtonOffsite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/app_color"
                            android:padding="@dimen/_5sdp"
                            android:text="Offsite Work"
                            android:textSize="20sp" />

                        <RadioButton
                            android:id="@+id/radioButtonPersonal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/app_color"
                            android:padding="@dimen/_5sdp"
                            android:text="Personal"
                            android:textSize="20sp" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/_5sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                        android:padding="@dimen/_5sdp"
                        android:text="Start time" />

                    <LinearLayout
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.busydoor.app.customMethods.MyCustomTextView
                                android:id="@+id/etStartHour"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_centerHorizontal="true"
                                android:layout_weight="1"
                                android:background="@drawable/rectangle_grey"
                                android:gravity="center"
                                android:text="00"
                                android:textSize="24sp"
                                android:timePickerMode="spinner" />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="hrs" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="@dimen/_15sdp"
                            android:backgroundTint="@color/black"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:text=":" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.busydoor.app.customMethods.MyCustomTextView
                                android:id="@+id/etStartMins"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_weight="1"
                                android:background="@drawable/rectangle_grey"
                                android:ems="10"
                                android:gravity="center"
                                android:text="00"
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="mins" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="@dimen/_1sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/_1sdp"
                                android:elevation="@dimen/_10sdp"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:id="@+id/buttonAM"
                                    android:textStyle="bold"
                                    android:background="@drawable/am_bg"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_9sdp"
                                    android:text="AM" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/_1sdp"
                                android:elevation="@dimen/_10sdp"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:id="@+id/buttonPM"
                                    android:background="@drawable/pm_bg"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:textStyle="bold"
                                    android:textColor="@color/app_color"
                                    android:textSize="@dimen/_9sdp"
                                    android:text="PM" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/_5sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12sdp"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:text="End time" />

                    <LinearLayout
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.busydoor.app.customMethods.MyCustomTextView
                                android:id="@+id/et_end_hour"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_centerHorizontal="true"
                                android:layout_weight="1"
                                android:background="@drawable/rectangle_grey"
                                android:gravity="center"
                                android:text="00"
                                android:textSize="24sp"
                                android:timePickerMode="spinner" />

                            <TextView
                                android:id="@+id/textView61"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="hrs" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView51"
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/black"
                            android:gravity="center"
                            android:text=":"
                            android:textSize="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.busydoor.app.customMethods.MyCustomTextView
                                android:id="@+id/et_end_min"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_weight="1"
                                android:background="@drawable/rectangle_grey"
                                android:gravity="center"
                                android:inputType="text"
                                android:text="00"
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/textView71"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="mins" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="@dimen/_1sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/_1sdp"
                                android:elevation="@dimen/_10sdp"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:id="@+id/et_end_am"
                                    android:background="@drawable/am_bg"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_9sdp"
                                    android:textStyle="bold"
                                    android:text="AM" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/_1sdp"
                                android:elevation="@dimen/_10sdp"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:id="@+id/et_end_pm"
                                    android:background="@drawable/pm_bg"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:textStyle="bold"
                                    android:textColor="@color/app_color"
                                    android:textSize="@dimen/_9sdp"
                                    android:text="PM" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="@dimen/_25sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_2sdp">

                <TextView
                    android:id="@+id/offsiteTimeDifferView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total offsite time "
                    android:textColor="@color/text_color"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/offsiteTimeDiffer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:text="00:00 mins"
                    android:textColor="@color/app_color"
                    android:textSize="34sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_25sdp"
                android:padding="@dimen/_2sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/commentsHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Enter comments" />
                <LinearLayout
                    android:layout_marginTop="@dimen/_13sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_65sdp"
                    android:orientation="vertical">

                    <com.busydoor.app.customMethods.MyCustomEdittext
                        android:id="@+id/commentsTextView"
                        android:padding="@dimen/_5sdp"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:stateListAnimator="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLines="10"
                        android:backgroundTint="@color/colorGreyLight"
                        android:background="@drawable/am_bg"
                        android:hint="Type here."
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="italic"
                        android:src="@drawable/icon_calendartoday" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_3sdp"
        android:orientation="horizontal">
        <com.busydoor.app.customMethods.MyCustomButton
            android:id="@+id/offsiteCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:elevation="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:textColor="@color/text_color"
            android:background="@drawable/button_shapes_with_white_color"
            style="?android:attr/borderlessButtonStyle"
            android:text="CANCEL" />
        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent"></TextView>
        <com.busydoor.app.customMethods.MyCustomButton
            android:id="@+id/offsiteSend"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEND"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:elevation="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@drawable/button_shapes_with_app_color"
            android:layout_marginStart="@dimen/_3sdp"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/white"/>

    </LinearLayout>
</RelativeLayout>
