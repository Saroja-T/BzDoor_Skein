<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_75sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_6sdp"
    android:gravity="center"
    android:baselineAligned="true"
    android:layout_margin="@dimen/_8sdp"
    android:id="@+id/dashbordView"
    android:elevation="@dimen/_15sdp"
    android:background="@drawable/home_list_back"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp">

        <!-- Image with Border -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/PremiseImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:padding="@dimen/_10sdp"
            android:visibility="visible"
            android:scaleType="centerCrop"/>
        <!-- Camera Icon -->
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_5sdp"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_3sdp">

        <com.busydoor.app.customMethods.MyCustomTextView
            android:id="@+id/premiseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_1sdp"
            android:textSize="@dimen/_14sdp"
            android:textColor="#1D1D1D"
            android:textStyle="bold"
            android:text=""
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:paddingBottom="@dimen/_5sdp"/>

        <com.busydoor.app.customMethods.MyCustomTextView
            android:id="@+id/premiseCity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/text_color"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_1sdp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:orientation="vertical"
        android:padding="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_18sdp">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/homePremiseUserStatus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:visibility="visible"
            app:civ_border_width="1.05dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
</LinearLayout>